{
	"manifest_version": 3,
	"name": "PaperTrail",
	"description": "Save arXiv papers",
	"version": "0.2.0",
	"action": {},
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"content_scripts": [
    {
    	"matches": ["https://arxiv.org/*"],
      "js": ["arxiv.js"],
			"type": "module"
    }
  ],
	"web_accessible_resources": [
    {
      "resources": ["paperTrail.html", "paperTrail.js", "dashboard.js"],
      "matches": ["<all_urls>"]
    }
  ],
	"permissions": ["scripting", "activeTab", "storage"]
}